{
  "name": "goondan-workspace",
  "private": true,
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter @goondan/* build",
    "build:runtime": "pnpm --filter @goondan/runtime build",
    "build:types": "pnpm --filter @goondan/types build",
    "build:registry": "pnpm --filter @goondan/registry build",
    "build:cli": "pnpm --filter @goondan/cli build",
    "build:base": "pnpm --filter @goondan/base build",
    "test": "pnpm -r test",
    "test:runtime": "pnpm --filter @goondan/runtime test",
    "test:types": "pnpm --filter @goondan/types test",
    "test:registry": "pnpm --filter @goondan/registry test",
    "test:cli": "pnpm --filter @goondan/cli test",
    "test:base": "pnpm --filter @goondan/base test",
    "typecheck": "pnpm -r typecheck",
    "typecheck:runtime": "pnpm --filter @goondan/runtime typecheck",
    "typecheck:types": "pnpm --filter @goondan/types typecheck",
    "typecheck:registry": "pnpm --filter @goondan/registry typecheck",
    "typecheck:cli": "pnpm --filter @goondan/cli typecheck",
    "typecheck:base": "pnpm --filter @goondan/base typecheck",
    "clean": "pnpm -r clean",
    "deploy": "pnpm deploy:runtime && pnpm deploy:cli && pnpm deploy:base",
    "deploy:runtime": "pnpm --filter @goondan/runtime publish --access public",
    "deploy:types": "pnpm --filter @goondan/types publish --access public",
    "deploy:registry": "pnpm --filter @goondan/registry publish --access public",
    "deploy:cli": "pnpm --filter @goondan/cli publish --access public",
    "deploy:base": "pnpm --filter @goondan/base publish --access public",
    "gdn": "node ./packages/cli/dist/bin.js",
    "validate": "pnpm gdn validate"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
