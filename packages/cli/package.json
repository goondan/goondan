{
  "name": "@goondan/cli",
  "version": "0.0.3-alpha3",
  "description": "Goondan CLI (gdn)",
  "type": "module",
  "bin": {
    "gdn": "dist/bin.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && chmod +x dist/bin.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm --filter @goondan/runtime build && vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@goondan/runtime": "workspace:*",
    "@optique/core": "^0.9.0",
    "@optique/run": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
