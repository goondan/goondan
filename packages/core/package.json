{
  "name": "@goondan/core",
  "version": "0.0.1",
  "description": "Goondan - Agent Swarm Orchestrator Core",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./bundle": {
      "types": "./dist/bundle/index.d.ts",
      "import": "./dist/bundle/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./pipeline": {
      "types": "./dist/pipeline/index.d.ts",
      "import": "./dist/pipeline/index.js"
    },
    "./tool": {
      "types": "./dist/tool/index.d.ts",
      "import": "./dist/tool/index.js"
    },
    "./extension": {
      "types": "./dist/extension/index.d.ts",
      "import": "./dist/extension/index.js"
    },
    "./connector": {
      "types": "./dist/connector/index.d.ts",
      "import": "./dist/connector/index.js"
    },
    "./oauth": {
      "types": "./dist/oauth/index.d.ts",
      "import": "./dist/oauth/index.js"
    },
    "./changeset": {
      "types": "./dist/changeset/index.d.ts",
      "import": "./dist/changeset/index.js"
    },
    "./workspace": {
      "types": "./dist/workspace/index.d.ts",
      "import": "./dist/workspace/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "yaml": "^2.7.1",
    "zod": "^3.24.4",
    "fast-glob": "^3.3.3",
    "minimatch": "^10.0.1",
    "jsonpath-plus": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "ai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "agent",
    "swarm",
    "orchestrator",
    "llm",
    "ai"
  ],
  "license": "MIT"
}
